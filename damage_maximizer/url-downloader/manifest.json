{
  "manifest_version": 3,
  "name": "URL Pattern Downloader",
  "version": "1.0",
  "description": "Automatically download HTML from URLs matching a pattern",
  "permissions": ["activeTab", "downloads", "scripting", "storage", "downloads.shelf"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
